{
  "driver_id": "firetv-unfolded-circle",
  "version": "0.0.2",
  "min_core_api": "0.20.0",
  "name": {
    "en": "Fire TV"
  },
  "icon": "custom:firetv.png",
  "description": {
    "en": "Integration for Fire TVs"
  },
  "developer": {
    "name": "Henrik Widlund",
    "email": "07online_rodeo@icloud.com",
    "url": "https://github.com/henrikwidlund/unfoldedcircle-firetv"
  },
  "setup_data_schema": {
    "title": {
      "en": "Enter Details"
    },
    "settings": [
      {
        "id": "disclaimer",
        "field": {
          "label": {
            "value": {
              "en": "Note that your Fire TV must be turned on and that Developer Settings are enabled on the TV."
            }
          }
        },
        "label": {
          "en": ""
        }
      },
      {
        "id": "mac_address",
        "field": {
          "text": {
            "value": "",
            "regex": "^([0-9a-fA-F]{2}[:-]){5}([0-9a-fA-F]{2})$"
          }
        },
        "label": {
          "en": "Enter the MAC address of the Fire TV"
        }
      },
      {
        "id": "ip_address",
        "field": {
          "text": {
            "value": "",
            "regex": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|(([0-9a-fA-F]{1,4}:){7,7}[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,7}:|([0-9a-fA-F]{1,4}:){1,6}:[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,5}(:[0-9a-fA-F]{1,4}){1,2}|([0-9a-fA-F]{1,4}:){1,4}(:[0-9a-fA-F]{1,4}){1,3}|([0-9a-fA-F]{1,4}:){1,3}(:[0-9a-fA-F]{1,4}){1,4}|([0-9a-fA-F]{1,4}:){1,2}(:[0-9a-fA-F]{1,4}){1,5}|[0-9a-fA-F]{1,4}:((:[0-9a-fA-F]{1,4}){1,6})|:((:[0-9a-fA-F]{1,4}){1,7}|:)|fe80:(:[0-9a-fA-F]{0,4}){0,4}%[0-9a-zA-Z]{1,}|::(ffff(:0{1,4}){0,1}:){0,1}((25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])\\.){3,3}(25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])|([0-9a-fA-F]{1,4}:){1,4}:((25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])\\.){3,3}(25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9]))$"
          }
        },
        "label": {
          "en": "Enter the IP address of the Fire TV"
        }
      },
      {
        "id": "port",
        "field": {
          "number": {
            "value": 5555,
            "min": 1,
            "max": 65535,
            "decimals": 0
          }
        },
        "label": {
          "en": "Enter the ADB port of the Fire TV"
        }
      }
    ]
  },
  "release_date": "2025-08-02"
}